---
const { title, description } = Astro.props
import "../styles/global.css"
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon-32x32.png" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />

        <title>{title}</title>
    </head>
    <body class="bg-image min-h-screen bg-blue-950 text-white">
        <slot />
    </body>
</html>

<style>
    .bg-image {
        background-image: url("/images/image-host-mobile.avif");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-blend-mode: overlay;
    }

    @media screen(md) {
        .bg-image {
            background-image: url("/images/bg-pattern-dots.svg"), url("/images/image-host.avif");
            background-size: auto;
            background-position: top 45rem right -7rem, top 0 right -3rem;
            background-blend-mode: normal;
        }
    }

    @media screen(lg) {
        .bg-image {
            background-image: url("/images/bg-pattern-dots.svg"), url("/images/image-host-desktop.avif");
            background-size: auto;
            background-position: top 47.5rem right 0rem, right 0rem top 10rem;
            background-blend-mode: normal;
        }
    }
</style>
